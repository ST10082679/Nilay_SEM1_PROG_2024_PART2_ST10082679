@model User

@{
    ViewBag.Title = "Login as Farmer";
}
<style>
    body {
    font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
    margin: 0;
    padding: 20px;
    background-color: #ffffff;
    color: #333333;
}

.login-container {
    display: flex;
    justify-content: center;
    align-items: center;
    height: 100vh;
}

fieldset {
    width: 700px;
    margin: 20px 0;
    padding: 30px;
    border: 1px solid #444444;
    border-radius: 8px;
    background-color: #000000;
    color: #ffffff;
    box-shadow: 0 0 10px rgba(0, 0, 0, 0.2);
}

table {
    width: 100%;
}

td {
    padding: 15px;
}

input[type="submit"] {
    padding: 10px 15px;
    background-color: #4CAF50;
    color: white;
    border: none;
    border-radius: 5px;
    cursor: pointer;
    font-size: 16px;
    transition: background-color 0.3s ease;
}

input[type="submit"]:hover {
background-color: #0056b3;
}

button {
    margin-top: 10px;
    padding: 10px 15px;
    background-color: #0056b3;
    color: white;
    border: none;
    border-radius: 5px;
    cursor: pointer;
    font-size: 16px;
    transition: background-color 0.3s ease;
}

button:hover {
background-color: #218838;
}

@@media (max-width: 600px) {
    fieldset {
        width: 100%;
        padding: 20px;
    }

    td {
        padding: 10px;
    }

    input[type="submit"], button {
        width: 100%;
        padding: 10px;
    }
}
</style>

@using (Html.BeginForm("LoginFarmer", "Home", FormMethod.Post))
{
    <fieldset>
        <legend>Login As Farmer</legend>

        @Html.AntiForgeryToken()
        @Html.ValidationSummary(true)

        @if (ViewBag.Message != null)
        {
            <p style="border: 1px solid red">
                @ViewBag.Message
            </p>
        }

        <table>
            <tr>
                <td>@Html.LabelFor(a => a.Email)</td>
                <td>@Html.TextBoxFor(a => a.Email)</td>
                <td>@Html.ValidationMessageFor(a => a.Email)</td>
            </tr>

            <tr>
                <td>@Html.LabelFor(a => a.Password)</td>
                <td>@Html.PasswordFor(a => a.Password)</td>
                <td>@Html.ValidationMessageFor(a => a.Password)</td>
            </tr>

            <tr>
                <td></td>
                <td><input type="submit" value="Login" /></td>
                <td></td>
            </tr>
        </table>
    </fieldset>
}

<button onclick="location.href='@Url.Action("LoginEmployee", "Home")'">Login as employee</button>

<button onclick="location.href='@Url.Action("Register", "Home")'" >Register as employee</button>
