@model Product
@{
    ViewData["Title"] = "Add Farmer";
}

<button onclick="location.href='@Url.Action("LogOut", "Home")'">Log out</button>

<button onclick="location.href='@Url.Action("FarmerDashboard", "Home")'">Back to dashboard</button>

<style>
body {
    font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
    margin: 0;
    padding: 20px;
    background-color: #ffffff;
    color: #333333;
}

fieldset {
    max-width: 700px;
    margin: 20px auto;
    padding: 30px;
    border: 1px solid #333333;
    border-radius: 8px;
    background-color: #000000;
    color: #ffffff;
    box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
}

legend {
    font-size: 1.5em;
    font-weight: bold;
    color: #ffffff;
    margin-bottom: 10px;
}

label {
    display: block;
    margin-bottom: 8px;
    color: #ffffff;
    font-weight: bold;
}

input {
    width: 100%;
    padding: 12px;
    box-sizing: border-box;
    margin-top: 8px;
    margin-bottom: 15px;
    border: 1px solid #dddddd;
    border-radius: 5px;
    font-size: 16px;
    background-color: #333333;
    color: #ffffff;
}

input[type="submit"] {
    background-color: #4CAF50;
    color: white;
    border: none;
    border-radius: 5px;
    cursor: pointer;
    font-size: 16px;
    transition: background-color 0.3s ease;
    padding: 12px;
    width: 100%;
}

input[type="submit"]:hover {
    background-color: #45a049;
}

button {
    margin-top: 10px;
    padding: 12px;
    background-color: #0056b3;
    color: white;
    border: none;
    border-radius: 5px;
    cursor: pointer;
    font-size: 16px;
    transition: background-color 0.3s ease;
    width: 100%;
}

button:hover {
    background-color: #004494;
}

@@media (max-width: 600px) {
    body {
        padding: 10px;
    }

    fieldset {
        width: 100%;
        padding: 20px;
        margin: 10px 0;
    }

    input, button {
        width: 100%;
        padding: 10px;
        font-size: 14px;
    }

    legend {
        font-size: 1.2em;
    }

    label {
        font-size: 14px;
    }
}
</style>

@using (Html.BeginForm("AddProduct", "Home", FormMethod.Post))
{
    <fieldset>


        @Html.AntiForgeryToken()
        @Html.ValidationSummary(true)

        @if (ViewBag.Message != null)
        {
            <p style="border: 1px solid red">
                @ViewBag.Message
            </p>
        }

        <table>

            <tr>
                <td>@Html.LabelFor(a => a.Name)</td>
                <td>@Html.TextBoxFor(a => a.Name)</td>
                <td>@Html.ValidationMessageFor(a => a.Name)</td>
            </tr>

            <tr>
                <td>@Html.LabelFor(a => a.ProductDate)</td>
                <td>@Html.TextBoxFor(a => a.ProductDate, new { type = "date" })</td>
                <td>@Html.ValidationMessageFor(a => a.ProductDate)</td>
            </tr>



            <tr>
                <td>@Html.LabelFor(a => a.Category)</td>
                <td>@Html.DropDownListFor(a => a.Category, new SelectList(ViewBag.Categories as List<string>), "Select a category")            
                <td>@Html.ValidationMessageFor(a => a.Category)</td>
            </tr>

            <tr>
                <td></td>
                <td><input type="submit" value="Add Product" /></td>
                <td></td>
            </tr>
        </table>
    </fieldset>
}