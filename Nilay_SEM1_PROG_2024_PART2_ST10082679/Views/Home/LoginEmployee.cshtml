@model User

@{
    ViewBag.Title = "Login as Employee";
}

<style>
    body {
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        margin: 0;
        background-color: #f8f9fa;
        color: #343a40;
    }

    .login-container {
        display: flex;
        justify-content: center;
        padding: 20px;
    }

    fieldset {
        width: 100%;
        max-width: 700px;
        margin: 20px;
        padding: 40px;
        border: 1px solid #dee2e6;
        border-radius: 8px;
        background-color: #000000;
        color: #ffffff;
        box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
    }

    legend {
        font-size: 1.5em;
        font-weight: bold;
        color: #ffffff;
    }

    table {
        width: 100%;
        border-collapse: collapse;
    }

    td {
        padding: 15px;
        vertical-align: top;
        color: #ffffff;
    }

    input[type="text"], input[type="password"], input[type="email"] {
        width: calc(100% - 20px);
        padding: 10px;
        margin: 5px 0;
        border: 1px solid #ced4da;
        border-radius: 4px;
        font-size: 1em;
        background-color: #343a40;
        color: #ffffff;
    }

    input[type="submit"] {
        padding: 10px 20px;
        background-color: #4CAF50;
        color: white;
        border: none;
        border-radius: 4px;
        cursor: pointer;
        font-size: 1em;
        transition: background-color 0.3s;
    }

        input[type="submit"]:hover {
            background-color: #0056b3;
        }

    button {
        margin-top: 20px;
        padding: 10px 20px;
        background-color: #0056b3;
        color: white;
        border: none;
        border-radius: 8px;
        cursor: pointer;
        font-size: 1em;
        transition: background-color 0.3s;
        margin-left: 18px;
    }

    button:hover {
        background-color: #218838;
    }

    @@media (max-width: 768px) {
    fieldset {
        padding: 30px;
    }

    input[type="submit"], button {
        margin-left: 0;
    }
}

    @@media (max-width: 480px) {
    fieldset {
        padding: 20px;
    }

    input[type="submit"], button {
        width: 100%;
        padding: 10px;
        margin: 10px 0 0;
    }
}
</style>

@using (Html.BeginForm("LoginEmployee", "Home", FormMethod.Post))
{
    <fieldset>
        <legend>Login As Employee</legend>

        @Html.AntiForgeryToken()
        @Html.ValidationSummary(true)

        @if (ViewBag.Message != null)
        {
            <p style="border: 1px solid red">
                @ViewBag.Message
            </p>
        }

        <table>
            <tr>
                <td>@Html.LabelFor(a => a.Email)</td>
                <td>@Html.TextBoxFor(a => a.Email)</td>
                <td>@Html.ValidationMessageFor(a => a.Email)</td>
            </tr>

            <tr>
                <td>@Html.LabelFor(a => a.Password)</td>
                <td>@Html.PasswordFor(a => a.Password)</td>
                <td>@Html.ValidationMessageFor(a => a.Password)</td>
            </tr>

            <tr>
                <td></td>
                <td><input type="submit" value="Login" /></td>
                <td></td>
            </tr>
        </table>
    </fieldset>
}

<button onclick="location.href='@Url.Action("LoginFarmer", "Home")'">Login as farmer</button>

<button onclick="location.href='@Url.Action("Register", "Home")'" >Register as employee</button>
