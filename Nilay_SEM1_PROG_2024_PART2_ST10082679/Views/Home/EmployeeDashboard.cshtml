@model IEnumerable<User>
@{
    ViewData["Title"] = "Employee Dashboard";
}

<button onclick="location.href='@Url.Action("Logout", "Home")'">Log out</button>

<button onclick="location.href='@Url.Action("AddFarmer", "Home")'">Add Farmer</button>
<style>
body {
    font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
    margin: 0;
    padding: 20px;
    background-color: #ffffff;
    color: #333333;
}

.container {
    max-width: 900px;
    margin: 0 auto;
    padding: 20px;
    background-color: #f9f9f9;
    box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
    border-radius: 8px;
}

button {
    padding: 10px 15px;
    background-color: #0056b3;
    color: white;
    border: none;
    border-radius: 5px;
    cursor: pointer;
    font-size: 16px;
    transition: background-color 0.3s ease;
}

button:hover {
    background-color: #004494;
}

h1 {
    text-align: center;
    color: #0056b3;
    font-size: 28px;
    margin-bottom: 20px;
}

table {
    width: 100%;
    border-collapse: collapse;
    margin-top: 20px;
    font-size: 16px;
}

th, td {
    padding: 15px;
    text-align: left;
    border-bottom: 1px solid #ddd;
}

th {
    background-color: #0056b3;
    color: white;
}

a {
    color: #0056b3;
    text-decoration: none;
    font-weight: bold;
}

a:hover {
    text-decoration: underline;
}

.message {
    border: 1px solid #dc3545;
    padding: 15px;
    margin-top: 20px;
    background-color: #f8d7da;
    color: #721c24;
    border-radius: 5px;
}

@@media (max-width: 600px) {
    .container {
        padding: 10px;
    }

    button {
        width: 100%;
        padding: 10px;
    }

    th, td {
        padding: 10px;
    }
}
</style>


<div class="text-center">
    <h1 class="display-4">Farmers</h1>

    @if (ViewBag.Message != null)
    {
        <p style="border: 1px solid red">
            @ViewBag.Message
        </p>
    }

    <table>
        <tr>
            <th>
                Name
            </th>
            <th>
                Email
            </th>
            <th>

            </th>
        </tr>

        @foreach (var farmer in Model)
        {
            <tr>
                <td>
                    @farmer.Name
                </td>
                <td>
                    @farmer.Email
                </td>
                <td>
                    <a asp-action="EmployeeFarmerView" asp-route-id="@farmer.UserId">View products</a>
                </td>
            </tr>
        }
    </table>
</div>