@model User

@{
    ViewBag.Title = "Register as Employee";
}

<style>
   body {
    font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
    margin: 0;
    padding: 20px;
    background-color: #ffffff;
    color: #333;
}

fieldset {
    max-width: 700px;
    margin: 20px auto;
    padding: 30px;
    border: 1px solid #444;
    border-radius: 8px;
    background-color: #000;  
    color: #fff;  
    box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
}

legend, label {
    color: #fff;
    font-weight: bold;
}

legend {
    font-size: 1.5em;
    margin-bottom: 10px;
}

label {
    margin-bottom: 8px;
}

input {
    width: 100%;
    padding: 12px;
    margin-top: 8px;
    margin-bottom: 15px;
    border: 1px solid #ddd;
    border-radius: 5px;
    font-size: 16px;
    background-color: #333;
    color: #fff;
}

input[type="submit"], button {
    padding: 12px;
    border: none;
    border-radius: 5px;
    cursor: pointer;
    font-size: 16px;
    transition: background-color 0.3s ease;
    color: white;
    margin-top: 10px;
}

input[type="submit"] {
    background-color: #4CAF50;
}

input[type="submit"]:hover {
    background-color: #45a049;
}

button {
    background-color: #0056b3;
        margin-left: 150px;
}

button:hover {
    background-color: #004494;
}

@@media (max-width: 600px) {
    fieldset {
        padding: 20px;
    }

    input, button {
        padding: 10px;
    }
}
</style>

@using (Html.BeginForm("Register", "Home", FormMethod.Post))
{
    <fieldset>
        <legend>Registration Page</legend>

        @Html.AntiForgeryToken()
        @Html.ValidationSummary(true)

        @if (ViewBag.Message != null)
        {
            <p style="border: 1px solid red">
                @ViewBag.Message
            </p>
        }

        <table>

            <tr>
                <td>@Html.LabelFor(a => a.Name)</td>
                <td>@Html.TextBoxFor(a => a.Name)</td>
                <td>@Html.ValidationMessageFor(a => a.Name)</td>
            </tr>

            <tr>
                <td>@Html.LabelFor(a => a.Email)</td>
                <td>@Html.TextBoxFor(a => a.Email)</td>
                <td>@Html.ValidationMessageFor(a => a.Email)</td>
            </tr>

            <tr>
                <td>@Html.LabelFor(a => a.Password)</td>
                <td>@Html.PasswordFor(a => a.Password)</td>
                <td>@Html.ValidationMessageFor(a => a.Password)</td>
            </tr>

            <tr>
                <td></td>
                <td><input type="submit" value="Register" /></td>
                <td></td>
            </tr>
        </table>
    </fieldset>
}
<button onclick="location.href='@Url.Action("LoginEmployee", "Home")'">Login Instead</button>

